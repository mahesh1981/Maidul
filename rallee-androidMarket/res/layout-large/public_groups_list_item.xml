<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/channels_ui_moving_function_bar"
    android:focusable="false"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgGroupItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/tvGroupItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgbtnGroupItem"
        android:layout_toRightOf="@+id/imgGroupItem"
        android:focusable="false"
        android:lines="2"
        android:paddingLeft="6dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold"         
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <!-- android:text="UsernameHere left you a new Voicemail" -->

    <ImageButton
        android:id="@+id/imgbtnGroupItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/talk_button_small" />

</RelativeLayout>