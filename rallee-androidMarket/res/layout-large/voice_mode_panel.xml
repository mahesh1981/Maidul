<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llVoiceModePanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/background_wood_grain"   
    android:orientation="vertical" 
     android:layout_marginBottom="0dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="fill_parent"
         android:gravity="center_vertical"
         android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/rlTopPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
         
         >

        <ImageView
            android:id="@+id/imgRRLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/login_logo" 
             />
    </RelativeLayout>

   
    
    
    <LinearLayout
        android:id="@+id/llCenterPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="500dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llSuperGrill"
                android:layout_width="500dp"
                android:layout_height="320dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgSuperGrill"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_ui_super_grill" />
            </LinearLayout>

            
             <LinearLayout
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                 
                android:layout_marginTop="223dp"
                android:layout_marginLeft="52dp" >
                
                 <ImageButton
                    android:id="@+id/imgBtnMuteSelfOnOffHomeActivity"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:background="@color/transparent"                    
                    android:src="@drawable/main_ui_super_grill_mute_me"
                    android:visibility="invisible" 
                    />
                 
                 </LinearLayout> 
            
            
             <LinearLayout
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                 
                 android:layout_alignParentRight="true"
                android:layout_marginTop="223dp"
                android:layout_marginRight="52dp">
                

                <ImageButton
                    android:id="@+id/imgBtnDeafenSelfOnOffHomeActivity"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:background="@color/transparent"                    
                    android:src="@drawable/main_ui_super_grill_mute_others" />
            </LinearLayout> 

            <LinearLayout
                android:id="@+id/llLcd"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/llSuperGrill"
                android:gravity="center_horizontal"
                android:orientation="vertical" 
                android:layout_marginTop="0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imgLcd"
                        android:layout_width="500dp"
                        android:layout_height="110dp"                       
                        android:scaleType="fitCenter"
                        android:background="@drawable/main_ui_lcd_panel_bg" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="260dp"
                        android:layout_height="110dp" >

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal|left"
                            android:orientation="vertical" 
                           >

                            <Chronometer
                                android:id="@+id/chronometer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:gravity="center|right"
                                android:text="Chronometer"
                                android:textColor="@color/light_blue"
                                android:textSize="18sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/tvCallerNameHomeActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"                               
                                android:ellipsize="marquee"
                                android:focusable="false"
                                android:gravity="center_vertical|left"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:text="@string/choose_a_friend"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/light_blue"
                                android:typeface="monospace" 
                                android:layout_marginBottom="0dp"
                                android:layout_marginLeft="0dp"/>
                        </LinearLayout>

                       <!--  <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/transparent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" >
                            <ImageView
                                android:id="@+id/main_ui_phone_state"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@color/transparent"
                                android:clickable="false"
                                android:paddingBottom="8dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="14dp"
                                android:paddingTop="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/main_ui_lcd_panel_phone_inactive" />

                        </LinearLayout> -->
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            
              <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"                          
                           android:layout_alignParentRight="true"
                           android:layout_marginTop="330dp"
                             android:layout_marginRight="3dp">
                            <ImageView
                                android:id="@+id/main_ui_phone_state"
                                android:layout_width="100dp"
                                android:layout_height="90dp"                               
                                android:clickable="false"                              
                                android:background="@drawable/main_ui_lcd_panel_phone_inactive" />

                        </LinearLayout>
            
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:background="@color/transparent"
                 android:gravity="center_horizontal"
                 android:orientation="vertical" >

             <ImageButton
                android:id="@+id/imgbtnTalkGlowHomeActivity"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignLeft="@+id/imgbtnTalkHomeActivity"
                android:layout_alignTop="@+id/imgbtnTalkHomeActivity"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/main_ui_talk_button_glow" />
            
            
            <ImageButton
                android:id="@+id/imgbtnTalkHomeActivity"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="86dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/main_ui_talk_button_normal" />

           <ImageView
                android:id="@+id/imgSpeakStatus"
                android:layout_width="50dp"
                android:layout_height="50dp"                        
                android:src="@drawable/main_ui_mic_led" 
               android:layout_marginTop="177dp"
               android:layout_marginLeft="3dp"/>

            <ImageView
                android:id="@+id/imgListenStatus"
                android:layout_width="50dp"
                android:layout_height="50dp"               
                android:layout_marginRight="7dp"                
                android:src="@drawable/main_ui_speaker_led" 
                android:layout_alignParentRight="true"
                android:layout_marginTop="175dp"
                />

</RelativeLayout>
            

        </RelativeLayout>
    </LinearLayout>
     </LinearLayout>

</LinearLayout>