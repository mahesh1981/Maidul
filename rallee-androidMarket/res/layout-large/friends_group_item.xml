<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pic_layout"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/four_squares_drawable" />


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal" >

                <ImageView
                    android:id="@+id/pic1"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_margin="2dp" />

                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top" >

                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:id="@+id/pic4"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_margin="2dp"/>
            </LinearLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/tvNumberOfMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/profile_pic"
            android:background="@drawable/main_ui_friends_well_group_count"
            android:gravity="center|center_horizontal"
            android:maxLines="2"
            android:text="@string/default_active_users_num"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imgPlusSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/profile_pic"
            android:src="@drawable/main_ui_friends_well_add_group_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:gravity="center_horizontal|right" >

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/default_fb_group_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>