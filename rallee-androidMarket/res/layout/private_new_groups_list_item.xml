<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/channels_ui_moving_function_bar"
    android:padding="5dp" 
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgGroupItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/main_ui_friends_well_add_group_icon"/>
    <TextView
        android:id="@+id/tvGroupItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingLeft="12dp"
        android:text="@string/label_new_group"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>